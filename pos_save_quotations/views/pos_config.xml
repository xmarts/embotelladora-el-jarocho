<odoo>
    <data>

        <record model="ir.ui.view" id="pos_config_save_quotation">
            <field name="name">pos.config.save.quotation</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Seller can save pos orders to quotations">
                            <div class="row mt16 o_settings_container" id="return_order">
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="allow_save_quotation"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="allow_save_quotation"/>
                                        <div class="text-muted">
                                            Active function save pos orders to quotations and load later
                                        </div>
                                        <div class="content-group"
                                             attrs="{'invisible' : [('allow_save_quotation', '=', False)]}">
                                            <div class="row mt16">
                                                <label string="Seller can save pos orders to quotations" for="period_return_days"
                                                       class="col-md-3 o_light_label"/>
                                                <field name="shop_id"
                                                       attrs="{'required' : [('allow_save_quotation', '=', True)]}"/>
                                            </div>
                                            <div class="row mt16">
                                                <label string="Seller can load quotations of other store" for="allow_load_data"
                                                       class="col-md-3 o_light_label"/>
                                                <field name="allow_load_data"/>
                                            </div>
                                            <div class="row mt16">
                                                <label string="Seller can delete quotations" for="delete_after_save"
                                                       class="col-md-3 o_light_label"/>
                                                <field name="delete_after_save"/>
                                            </div>
                                            <div class="row mt16">
                                                <label string="Send mail to customer when quotation create" for="send_mail_after_save"
                                                       class="col-md-3 o_light_label"/>
                                                <field name="send_mail_after_save"/>
                                            </div>
                                            <div class="row mt16">
                                                <label string="Hide shop selection, auto default current shop" for="hide_shop_selection"
                                                       class="col-md-3 o_light_label"/>
                                                <field name="hide_shop_selection"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

    </data>
</odoo>