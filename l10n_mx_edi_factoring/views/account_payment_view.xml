<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_l10n_mx_edi_factoring_account_payment_form" model="ir.ui.view">
        <field name="name">l10n_mx_edi_factoring.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="l10n_mx_edi_factoring_id"
                    attrs="{'invisible': [('payment_type', 'not in', ['inbound']), ('partner_type', 'in', ['customer'])]}"
                    options="{'no_open': True, 'no_create': True}"
                    domain="[('id','!=',partner_id),('l10n_mx_edi_factoring', '=', True)]"/>
            </xpath>
        </field>
    </record>
    <record id="view_l10n_mx_edi_factoring_account_payment_invoice_form" model="ir.ui.view">
        <field name="name">l10n_mx_edi_factoring.payment.form.wizard</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="l10n_mx_edi_factoring_id"
                    attrs="{'invisible': [('payment_type', 'not in', ['inbound']), ('partner_type', 'in', ['customer'])]}"
                    options="{'no_open': True, 'no_create': True}"
                    domain="[('id','!=',partner_id),('l10n_mx_edi_factoring', '=', True)]"/>
            </xpath>
        </field>
    </record>
    <record id="view_l10n_mx_edi_factoring_account_payment_from_invoices" model="ir.ui.view">
        <field name="name">l10n_mx_edi_factoring.register.payment.form.wizard</field>
        <field name="model">account.register.payments</field>
        <field name="inherit_id" ref="account.view_account_payment_from_invoices"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="l10n_mx_edi_factoring_id"
                    attrs="{'invisible': [('payment_type', 'not in', ['inbound']), ('partner_type', 'in', ['customer'])]}"
                    options="{'no_open': True, 'no_create': True}"
                    domain="[('id','!=',partner_id),('l10n_mx_edi_factoring', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo>
